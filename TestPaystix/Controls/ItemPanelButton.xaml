<UserControl x:Class="TestPaystix.Controls.ItemPanelButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestPaystix.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" MaxWidth="450"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
        <DockPanel MouseLeave="DockPanel_MouseLeave" >
        <Button  Content="{Binding  Title}" DockPanel.Dock="Top" Height="150" Click="ButtonText_Click" HorizontalAlignment="Right" Width="450"  />
        <StackPanel x:Name="VisibilityStyle"  Orientation="Horizontal" Visibility="Collapsed" >
            <!--<StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter  Property="Visibility" Value="Visible"/>
                </Style>
            </StackPanel.Resources>-->
            <Button Content="1" Width="150" Click="Button_Click" />
            <Button Content="2" Width="150" Click="Button_Click" />
            <Button Content="3" MinWidth="150" MaxWidth="150" Click="Button_Click" />
        </StackPanel>
    </DockPanel>
</UserControl>
